@namespace AntDesign.Pro.Layout
@inherits AntDomComponentBase

<AntList
    Split="false"
    DataSource="Settings"
    ItemLayout="AntDirectionVHType.Horizontal">
    <Item Context="item">
        <span style="opacity: @(item.Disabled ? "0.5" : "1")">@item.Title</span>
        @item.Action
    </Item>
</AntList>

@code
{
    public SettingItem[] Settings { get; set; } = {
        new SettingItem
        {
            Title="Content Width",
            Action = @<Select
                          Size="small"
                          Style="width: 80px;">
                          <SelectOption Value="Fixed">Fixed</SelectOption>
                          <SelectOption Value="Fluid">Fluid</SelectOption>
                     </Select>
        },
        new SettingItem
        {
            Title="Fixed Header",
            Action = @<Switch Size="small"/>
        },
        new SettingItem
        {
            Title="Works on Side Menu Layout",
            Action = @<Switch Size="small"/>
        },
        new SettingItem
        {
            Title="Split Menus",
            Action = @<Switch Size="small"/>
        },
    };
}
