@namespace AntDesign.Pro.Layout
@inherits AntDomComponentBase

<div class="@BaseClassName" style="min-height: 42px;">
    @foreach (var item in List)
    {
        <div key="@item.Key" class="@BaseClassName-item" @onclick="args=> Value = item.Key">
            <Tooltip Title="@item.Title">
                <img src="@item.Url" alt="@item.Key" />
            </Tooltip>
            <div class="@BaseClassName-selectIcon" style="display: @(Value == item.Key ? "block" : "none");">
                <Icon Type="check" Theme="outline" />
            </div>
        </div>
    }
</div>