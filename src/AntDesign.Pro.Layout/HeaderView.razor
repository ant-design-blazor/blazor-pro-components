@namespace AntDesign.Pro.Layout
@inherits AntProComponentBase

@if (_needFixedHeader)
{
    <Header Style="height:48px; line-height: 48px;"></Header>
}
<Header Class="@ClassMapper.Class" Style="@_headerStyle">
    @if (_isTop && !IsMobile)
    {
        <TopNavHeader
            Theme="@NavTheme"
            Mode= "MenuMode.Horizontal"/>
    }
    else
    {
        <GlobalHeader>
            @HeaderContentRender
        </GlobalHeader>
    }
</Header>