@namespace AntDesign.ProLayout
@inherits AntProComponentBase

@if (_needFixedHeader)
{
    <Header Style="@_fixedHeaderStyle"></Header>
}
<Header Class="@ClassMapper.Class" Style="@_headerStyle">
    @if (_isTop && !IsMobile)
    {
        <TopNavHeader Mode= "MenuMode.Horizontal" Logo="Logo" MenuData="MenuData" />
    }
    else
    {
        <GlobalHeader SiderWidth="SiderWidth" Logo="Logo" Title="@Title" BaseURL="@BaseURL">
            @HeaderContentRender
        </GlobalHeader>
    }
</Header>